// Visual Studio Code user settings for the project, supplied in '--user-data-dir' parameter.
{
    // Disable telemetry.
    "telemetry.telemetryLevel": "off",
    // Disable autoupdating of Visual Studio Code.
    "update.mode": "none",
    // Ensure the autoupdate of all the extensions is disabled.
    "extensions.autoUpdate": false,
    // Trust workspace files.
    "security.workspace.trust.enabled": true,
    // Disable notifications for extensions.
    "extensions.ignoreRecommendations": true
}
